@model IEnumerable<VideojuegosCRUD.Models.Plataforma>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombrePlataforma)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fabricante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdUsuarioNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdVideojuegoNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombrePlataforma)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fabricante)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdUsuarioNavigation.IdUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdVideojuegoNavigation.IdVideojuego)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdPlataforma">Edit</a> |
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.IdPlataforma">Details</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdPlataforma">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
